---json
{
  "permalink": "allfac.xml",
  "eleventyExcludeFromCollections": true,
  "metadata": {
    "title": "Updates from fac.gov",
    "subtitle": "Combined general, grantee/auditor, and Federal feeds.",
    "language": "en",
    "url": "https://fac.gov/",
    "author": {
      "name": "The FAC @ GSA",
      "email": "fac@gsa.gov"
    }
  }
}
---
<?xml version="1.0" encoding="utf-8"?>
<rss 
    version="2.0" 
    xmlns:dc="http://purl.org/dc/elements/1.1/" 
    xml:base="{{ metadata.url }}" 
    xmlns:atom="http://www.w3.org/2005/Atom">
  <channel>
    <title>{{ metadata.title }}</title>
    <link>{{ metadata.url }}</link>
    <atom:link href="{{ permalink | absoluteUrl(metadata.url) }}" rel="self" type="application/rss+xml" />
    <description>{{ metadata.subtitle }}</description>
    <language>{{ metadata.language }}</language>
    {%- for item in updates.updates | sort(false, true, 'date') %}
    <item>
      <title>{{ item.title }}</title>
      <link>{{ absolutePostUrl }}</link>
      <description>{{ item.body }}</description>
      <pubDate>{{ item.date }}</pubDate>
      <dc:creator>{{ metadata.author.name }}</dc:creator>
      <guid>{{ item.body }}</guid>
    </item>
    {%- endfor %}
  </channel>
</rss>